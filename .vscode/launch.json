    "version": "0.2.0",
    "configurations": [
        {
            "name": "Init DB",
            "type": "python",
            "request": "launch",
            "program": "init_db.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "App",
            "justMyCode": false,
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host",
                "0.0.0.0"
            ],
            "jinja": true,
            "serverReadyAction": {
                "pattern": ".*https?:\\/\\/\\S+:([0-9]+)\\/?.*",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}